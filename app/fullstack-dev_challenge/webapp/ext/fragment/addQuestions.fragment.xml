<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    core:require="{handler: 'fullstackdevchallenge/ext/controller/TestsObjectPageExt'}"
>
    <Dialog
        id="addQuestionsDialog"
        title="{i18n>addQuestions}"
    >
        <content>
        	<VBox class="sapUiSmallMargin" id="formContainer" >
            <Text
                id="titleID"
                text="{title}"
            />
            <Input
                id="questionsNumID"
                placeholder="{i18n>EnterNumber}"
                type="Number"
                required="true"
            />
            </VBox>
        </content>
        <buttons>
            <Button
                id="closeBtnID"
                text="{i18n>cancel}"
                type="Reject"
                press="handler.onCloseDialog"
            />

            <Button
                id="submitBtnID"
                text="{i18n>submit}"
                type="Accept"
                press="handler.onAddQuestions"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
